<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (users.length > 0) { %>
                <ul class="cart__item-list">
                    <% users.forEach(user => { %>
                        <li class="cart__item">
                            <% if(user.username===usernameNav){ %>
                                <h1 style="color:crimson"><%=user.username%></h1>
                                <% }else{ %>
                            <h1><%=user.username%></h1>
                            <% } %>
                            <h2> <%=user.email %></h2>
                            <div >
                                <a href="/wishlist/<%= user._id %>" class="btn">View</a>
                            </div>
                        </li>
                    <% }) %>
                </ul>
                
            <% } else { %>
                <h1>No Products in Cart!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>